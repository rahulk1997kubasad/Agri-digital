<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crop_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_add_icon"
            android:id="@+id/crop_image"/>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:id="@+id/crop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/crop_min_price"
                android:layout_weight="2"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Crop Name"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="#3065a2"
                android:textSize="18sp"
                android:textStyle="normal|bold" />


            <TextView

                android:id="@+id/crop_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/crop_bid_date"
                android:layout_weight="2"

                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Crop Min Price"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="#3065a2"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView

                android:id="@+id/crop_bid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Last Bid Date"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="#3065a2"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/btn_make_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/crop_name"
                android:layout_marginTop="29dp"
                android:background="@drawable/rectangle_background"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:shadowColor="@android:color/background_light"
                android:text="Make bid"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

    </RelativeLayout>

</LinearLayout>
</LinearLayout>
