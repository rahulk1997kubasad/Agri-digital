<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.farmvisor.HomeFragment"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:background="@drawable/black_wall">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/fields_l"
            android:id="@+id/btn_my_land"
            android:background="@drawable/round_btn"
            />

        <TextView
            android:text="Lands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_height="128dp"
                app:srcCompat="@drawable/farmer_job"
                android:id="@+id/btn_my_jobs"
                android:layout_width="128dp"
                android:background="@drawable/round_btn" />

            <TextView
                android:text="Job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tractor_l"
            android:id="@+id/btn_my_equipment"
            android:background="@drawable/round_btn"
             />

            <TextView
                android:text="Equipments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:textSize="16sp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/plant_l"
            android:id="@+id/btn_my_investment"
            android:background="@drawable/round_btn"
            />



        <TextView
            android:text="Investments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
        </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fields_l"
                android:id="@+id/btn_my_crops"
                android:background="@drawable/round_btn"
                />

            <TextView
                android:text="Crops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/plant_l"
                android:id="@+id/btn_auctions"
                android:background="@drawable/round_btn"
                />



            <TextView
                android:text="Crop Auctions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auctionsText"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</ScrollView>
